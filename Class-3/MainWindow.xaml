<!-- MainWindow.xaml -->
<Window x:Class="ProjectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="450" Width="800">
    <StackPanel>
        <Button Command="{Binding ButtonClicked}">Click Me</Button>
        <TextBox Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
        <TextBlock Text="{Binding UserInput}" FontSize="14" Margin="10"/>
        <TextBlock Text="{Binding UserInputReversed}" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>
